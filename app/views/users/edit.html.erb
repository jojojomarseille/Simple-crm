<h1>Éditer les Informations Utilisateur</h1>

<%= form_for(@user, url: user_path, method: :patch) do |f| %>
  <div class="form-group">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div class="form-group">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="form-group">
    <%= f.label :birthdate %>
    <%= f.date_select :birthdate %>
  </div>

  <%= f.submit "Mettre à jour", class: 'btn btn-primary' %>
<% end %>