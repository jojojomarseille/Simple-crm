<!DOCTYPE html>
<html>
  <head>
    <title>SuperCrmTest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%# <%= hotwire_livereload_tags if Rails.env.development? %>  
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "style_table", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "style_form", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "subscription_form", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "side_menu", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "top_bar", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "order_form", "data-turbo-track": "reload" %>

    <!-- intl-tel-input CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.1.1/build/css/intlTelInput.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKuave45NnXlKogx1rpqD2ItifAGxiaLs"></script> 
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/intlTelInput.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  </head>

  <body>
<!-- left Menu -->
  <% unless current_page?(root_path) || controller_name == 'registrations' || request.path == '/users/sign_in' %>
    <%= render 'layouts/sidebar' %>
  <% end %>
<!-- top bar-->
  <% unless controller_name == 'registrations' || request.path == '/users/sign_in' %>
    <%= render 'layouts/topbar' %>
  <% else %>
    <%= render 'layouts/simplebar'%>
  <% end %>

<!-- Messages Flash -->
<% flash.each do |type, message| %>
  <div class="flash <%= type %>"><%= message %></div>
<% end %>

  
  <!-- Content of the yield-->
  <div class="yield" style="padding-left: 70px">
    <main>
      <%= yield %>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</body>
<!-- Footer -->
<footer class="main-footer">
  <div class="container">
    <p>&copy; <%= Time.current.year %> SuperCrmTest. Tous droits réservés.</p>
  </div>
</footer>

</html>
