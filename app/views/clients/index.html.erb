<h1>Lista de Clientes</h1>

<div class="table-container">
  <table class="client-table">
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Endereço</th>
      <th>Cidade</th>
      <th>País</th>
      <th>Código Postal</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Ações</th>
    </tr>

    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.client_type %></td>
        <td><%= client.mail %></td>
        <td><%= client.phone %></td>
        <td><%= client.address %></td>
        <td><%= client.city %></td>
        <td><%= client.country %></td>
        <td><%= client.postal_code %></td>
        <td><%= client.latitude %></td>
        <td><%= client.longitude %></td>
        <td class="actions">
          <%= link_to 'Mostrar', client, class: 'btn-show' %> |
          <%= link_to 'Editar', edit_client_path(client), class: 'btn-edit' %> |
          <%= link_to 'Excluir', client, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn-delete' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Novo Cliente', new_client_path, class: 'btn-new-client' %> <!-- Botão de Novo Cliente -->
