<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'custom-form' }) do |f| %>
  <% if resource.errors.any? %>
    <div class="custom-error-container">
      <h2><%= pluralize(resource.errors.count, "erro") %> impediram o salvamento deste formul√°rio:</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="custom-form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'custom-input', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="custom-form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: 'custom-input', autocomplete: "new-password" %>
  </div>

  <div class="custom-form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'custom-input', autocomplete: "new-password" %>
  </div>

  <div class="custom-form-group">
    <%= f.submit "Sign up", class: 'custom-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
